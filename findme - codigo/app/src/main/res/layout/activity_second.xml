<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hernan.findme.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto"
        android:layout_above="@+id/intensidad3"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />


    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/button"
        android:background="@mipmap/botonactivado"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/intensidad1"
        android:visibility="invisible"
        android:background="@mipmap/radarcircunferencia1baja"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:id="@+id/intensidad2"
        android:visibility="invisible"
        android:background="@mipmap/radarcircunferencia2media"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/intensidad3"
        android:visibility="invisible"
        android:background="@mipmap/radarcircunferencia3alta"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/porcentaje"
        android:layout_above="@+id/intensidad3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
