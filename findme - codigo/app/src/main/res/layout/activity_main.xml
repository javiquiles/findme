<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hernan.findme.MainActivity">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tesoro"
        android:hint="Nombre del Tesoro"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/button"
        android:textSize="20dp"
        android:background="#14c5c5"
        android:padding="20dp"
        android:onClick="pasarActividad"
        android:layout_below="@+id/tesoro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_marginBottom="40dp"
        android:src="@mipmap/android"
        android:layout_above="@+id/tesoro"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
